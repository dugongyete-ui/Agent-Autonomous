modules = ["python-3.11", "nodejs-20"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cacert", "cargo", "chromedriver", "chromium", "ffmpeg", "ffmpeg-full", "geckodriver", "glibcLocales", "libiconv", "libsndfile", "libxcrypt", "pkg-config", "portaudio", "redis", "rustc", "xsimd"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python api.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[userenv]

[userenv.shared]
WORK_DIR = "/home/runner/workspace/work_dir"

[deployment]
deploymentTarget = "vm"
run = ["python"]
